
@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":SetPaymentCommandParser" as SetPaymentCommandParser LOGIC_COLOR
participant "c:SetPaymentCommand" as SetPaymentCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
participant ":Person" as Person MODEL_COLOR
end box

[-> LogicManager : execute("setpayment 1 p/500")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("setpayment 1 p/500")
activate AddressBookParser

create SetPaymentCommandParser
AddressBookParser -> SetPaymentCommandParser
activate SetPaymentCommandParser

SetPaymentCommandParser --> AddressBookParser
deactivate SetPaymentCommandParser

AddressBookParser -> SetPaymentCommandParser : parse("1 p/500")
activate SetPaymentCommandParser

create SetPaymentCommand
SetPaymentCommandParser -> SetPaymentCommand
activate SetPaymentCommand

SetPaymentCommand --> SetPaymentCommandParser
deactivate SetPaymentCommand

SetPaymentCommandParser --> AddressBookParser : c
deactivate SetPaymentCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
SetPaymentCommandParser -[hidden]-> AddressBookParser
destroy SetPaymentCommandParser

AddressBookParser --> LogicManager : c
deactivate AddressBookParser

LogicManager -> SetPaymentCommand : execute(m)
activate SetPaymentCommand

SetPaymentCommand -> Model : getFilteredPersonList()
activate Model

Model --> SetPaymentCommand : personList
deactivate Model

SetPaymentCommand -> Model : setPerson(personToEdit, editedPerson)
activate Model

create Person
Model -> Person : new Person(...)
activate Person

Person --> Model
deactivate Person

Model --> SetPaymentCommand
deactivate Model

create CommandResult
SetPaymentCommand -> CommandResult
activate CommandResult

CommandResult --> SetPaymentCommand
deactivate CommandResult

SetPaymentCommand --> LogicManager : r
deactivate SetPaymentCommand

[<--LogicManager
deactivate LogicManager
@enduml
